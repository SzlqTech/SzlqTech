<UserControl
    x:Class="SzlqTech.Core.WorkFlow.Views.InnoLightDataRecord"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:SzlqTech.Core.Themes.Controls;assembly=SzlqTech.Core"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:loc="clr-namespace:SzlqTech.Localization;assembly=SzlqTech.Localization"
    xmlns:local="clr-namespace:SzlqTech.Core.WorkFlow.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="{DynamicResource MaterialDesignCardBackground}"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <StackPanel
            Margin="10"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <TextBox
                x:Name="searchTextBox"
                MinWidth="200"
                MinHeight="35"
                Margin="0,0,10,0"
                md:HintAssist.Hint="{loc:Loc DataQueryHintText}">
                <TextBox.InputBindings>
                    <KeyBinding
                        Key="Enter"
                        Command="{Binding SearchCommand}"
                        CommandParameter="{Binding Text, ElementName=searchTextBox}" />
                </TextBox.InputBindings>
            </TextBox>
            <Button
                MinWidth="100"
                Command="{Binding SearchCommand}"
                CommandParameter="{Binding Text, ElementName=searchTextBox}"
                Content="{loc:Loc DataQuery}" />
        </StackPanel>
        <DataGrid
            Grid.Row="1"
            Margin="5"
            ItemsSource="{Binding dataPager.GridModelList}"
            AutoGenerateColumns="False"
            CanUserAddRows="False"
            CanUserSortColumns="False"
            IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Width="*" Header="{loc:Loc ProductQrCode}" Binding="{Binding ProductName}"/>
                <DataGridTextColumn Width="*" Header="SN" Binding="{Binding Sn}"/>
                <DataGridTextColumn Width="*" Header="{loc:Loc StationName}" Binding="{Binding StationName}"/>
                <DataGridTextColumn Width="*" Header="{loc:Loc EnterDate}" Binding="{Binding EnterDate}"/>
                <DataGridTextColumn Width="*" Header="{loc:Loc LeaveDate}" Binding="{Binding LeaveDate}"/>
            </DataGrid.Columns>
        </DataGrid>
        <controls:DataPager Grid.Row="2" 
                            Margin="10"
                            PageIndex="{Binding dataPager.PageIndex, Mode=TwoWay}"
                            PageSize="{Binding dataPager.PageSize,Mode=TwoWay}"
                            PageCount="{Binding dataPager.PageCount, Mode=TwoWay}"
                            NumericButtonCount="{Binding dataPager.NumericButtonCount}" />
    </Grid>
</UserControl>
