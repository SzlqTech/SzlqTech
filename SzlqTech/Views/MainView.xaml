<Window
    x:Class="SzlqTech.Views.MainView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:const="clr-namespace:SzlqTech.Core.Consts;assembly=SzlqTech.Core"
    xmlns:controls="clr-namespace:SzlqTech.Themes.Controls"
    xmlns:converter="clr-namespace:SzlqTech.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:loc="clr-namespace:SzlqTech.Localization;assembly=SzlqTech.Localization"
    xmlns:local="clr-namespace:SzlqTech.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:prism="http://prismlibrary.com/"
    Title="MainView"
    Width="1600"
    Height="900"
    prism:ViewModelLocator.AutoWireViewModel="True"
    WindowStartupLocation="CenterScreen"
    WindowState="Maximized"
    WindowStyle="None"
    mc:Ignorable="d">
    <Window.Resources>
        <converter:MenuTitleConverter x:Key="menuTitleConverter" />
        <converter:MenuImageConverter x:Key="menuConverter" />
        <converter:ByteToImageConverter x:Key="bytesToImageConverter" />
    </Window.Resources>
    <md:DialogHost Identifier="{x:Static const:AppSharedConsts.RootIdentifier}" IsOpen="{Binding IsOpen}">
        <md:DialogHost.DialogContent>
            <StackPanel>
                <ProgressBar
                    Width="40"
                    Height="40"
                    Margin="10"
                    IsIndeterminate="True"
                    Style="{StaticResource MaterialDesignCircularProgressBar}" />
            </StackPanel>
        </md:DialogHost.DialogContent>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="GridLeftMenu" Width="230" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <md:Card
                Margin="0,-3"
                Background="{DynamicResource MaterialDesignPaper}"
                BorderBrush="{DynamicResource MaterialDesignShadowBrush}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <!--  顶部标题  -->
                    <DockPanel
                        Margin="15"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        LastChildFill="False">
                        <StackPanel x:Name="StackHeader" Orientation="Horizontal">
                            <Image
                                Width="20"
                                Height="20"
                                VerticalAlignment="Center"
                                Source="/Assets/Images/logo.ico" />
                            <TextBlock
                                Margin="5,0"
                                VerticalAlignment="Center"
                                FontSize="14"
                                FontWeight="Bold"
                                Text="SZLQ" />
                            <TextBlock
                                Margin="0,0,5,0"
                                VerticalAlignment="Center"
                                FontSize="14"
                                Text="System " />
                        </StackPanel>
                        <ToggleButton
                            x:Name="toggleMenuButton"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            md:ToggleButtonAssist.OnContent="{md:PackIcon Kind=ArrowRight}"
                            Content="{md:PackIcon Kind=MenuOpen}"
                            DockPanel.Dock="Right"
                            Style="{StaticResource MaterialDesignActionToggleButton}"
                            ToolTip="MaterialDesignActionLightToggleButton" />
                    </DockPanel>
                    <!--  左侧系统菜单  -->
                    <ItemsControl
                        Grid.Row="1"
                        Margin="10"
                        ItemsSource="{Binding NavigationItems}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <ContentControl>
                                    <Expander
                                        Padding="0"
                                        md:ExpanderAssist.HorizontalHeaderPadding="0 10"
                                        Background="Transparent"
                                        Style="{DynamicResource MaterialDesignExpander}">
                                        <Expander.Header>
                                            <StackPanel Orientation="Horizontal">
                                                <Image
                                                    Width="20"
                                                    Height="20"
                                                    Source="{Binding Icon, Converter={StaticResource menuConverter}}"
                                                    ToolTip="{Binding Title}" />
                                                <TextBlock
                                                    Margin="10,0"
                                                    VerticalAlignment="Center"
                                                    FontSize="14"
                                                    Text="{Binding Title}" />
                                            </StackPanel>
                                        </Expander.Header>
                                        <Expander.Content>
                                            <ItemsControl ItemsSource="{Binding Items}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <RadioButton
                                                            Height="35"
                                                            Cursor="Hand"
                                                            Command="{Binding RelativeSource={RelativeSource AncestorType=Window, Mode=FindAncestor}, Path=DataContext.NavigateCommand}"
                                                            CommandParameter="{Binding .}"
                                                            GroupName="Menu"
                                                            IsChecked="{Binding IsSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                                            <RadioButton.Template>
                                                                <ControlTemplate TargetType="RadioButton">
                                                                    <Grid Background="Transparent">
                                                                        <Grid.ColumnDefinitions>
                                                                            <ColumnDefinition Width="auto" />
                                                                            <ColumnDefinition />
                                                                        </Grid.ColumnDefinitions>
                                                                        <Border
                                                                            x:Name="bg"
                                                                            Grid.ColumnSpan="2"
                                                                            CornerRadius="2" />

                                                                        <Rectangle
                                                                            x:Name="rect"
                                                                            Width="2"
                                                                            Height="20"
                                                                            HorizontalAlignment="Left"
                                                                            Fill="Blue"
                                                                            Visibility="Collapsed" />
                                                                        <Image
                                                                            Width="20"
                                                                            Height="20"
                                                                            Margin="10,0"
                                                                            Source="{Binding Icon, Converter={StaticResource menuConverter}}"
                                                                            ToolTip="{Binding Title}" />

                                                                        <TextBlock
                                                                            Grid.Column="1"
                                                                            VerticalAlignment="Center"
                                                                            Text="{Binding Title}" />
                                                                    </Grid>
                                                                    <ControlTemplate.Triggers>
                                                                        <Trigger Property="IsChecked" Value="true">
                                                                            <Setter TargetName="bg" Property="Background" Value="{DynamicResource MaterialDesignCardBackground}" />
                                                                            <Setter TargetName="rect" Property="Visibility" Value="Visible" />
                                                                        </Trigger>
                                                                    </ControlTemplate.Triggers>
                                                                </ControlTemplate>
                                                            </RadioButton.Template>
                                                        </RadioButton>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </Expander.Content>
                                    </Expander>
                                    <ContentControl.Style>
                                        <Style TargetType="ContentControl">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Items.Count}" Value="0">
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="ContentControl">
                                                                <RadioButton
                                                                    Height="35"
                                                                    Command="{Binding RelativeSource={RelativeSource AncestorType=Window, Mode=FindAncestor}, Path=DataContext.NavigateCommand}"
                                                                    CommandParameter="{Binding .}"
                                                                    GroupName="Menu"
                                                                    IsChecked="{Binding IsSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                                                    <RadioButton.Template>
                                                                        <ControlTemplate TargetType="RadioButton">
                                                                            <Grid Background="Transparent">
                                                                                <Grid.ColumnDefinitions>
                                                                                    <ColumnDefinition Width="auto" />
                                                                                    <ColumnDefinition />
                                                                                </Grid.ColumnDefinitions>
                                                                                <Border
                                                                                    x:Name="bg"
                                                                                    Grid.ColumnSpan="2"
                                                                                    CornerRadius="2" />
                                                                                <Image
                                                                                    Width="20"
                                                                                    Height="20"
                                                                                    Source="{Binding Icon, Converter={StaticResource menuConverter}}"
                                                                                    ToolTip="{Binding Title}" />
                                                                                <TextBlock
                                                                                    Grid.Column="1"
                                                                                    Margin="10,0"
                                                                                    VerticalAlignment="Center"
                                                                                    Text="{Binding Title}" />
                                                                            </Grid>
                                                                            <ControlTemplate.Triggers>
                                                                                <Trigger Property="IsChecked" Value="true">
                                                                                    <Setter TargetName="bg" Property="Background" Value="{DynamicResource MaterialDesignCardBackground}" />
                                                                                </Trigger>
                                                                            </ControlTemplate.Triggers>
                                                                        </ControlTemplate>
                                                                    </RadioButton.Template>
                                                                </RadioButton>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Items}" Value="{x:Null}">
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="ContentControl">
                                                                <RadioButton
                                                                    Height="35"
                                                                    Command="{Binding RelativeSource={RelativeSource AncestorType=Window, Mode=FindAncestor}, Path=DataContext.NavigateCommand}"
                                                                    CommandParameter="{Binding .}"
                                                                    GroupName="Menu"
                                                                    IsChecked="{Binding IsSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                                                    <RadioButton.Template>
                                                                        <ControlTemplate TargetType="RadioButton">
                                                                            <Grid Background="Transparent">
                                                                                <Grid.ColumnDefinitions>
                                                                                    <ColumnDefinition Width="auto" />
                                                                                    <ColumnDefinition />
                                                                                </Grid.ColumnDefinitions>
                                                                                <Border
                                                                                    x:Name="bg"
                                                                                    Grid.ColumnSpan="2"
                                                                                    CornerRadius="2" />
                                                                                <Image
                                                                                    Width="20"
                                                                                    Height="20"
                                                                                    Source="{Binding Icon, Converter={StaticResource menuConverter}}"
                                                                                    ToolTip="{Binding Title}" />
                                                                                <TextBlock
                                                                                    Grid.Column="1"
                                                                                    Margin="10,0"
                                                                                    VerticalAlignment="Center"
                                                                                    Text="{Binding Title}" />
                                                                            </Grid>
                                                                            <ControlTemplate.Triggers>
                                                                                <Trigger Property="IsChecked" Value="true">
                                                                                    <Setter TargetName="bg" Property="Background" Value="{DynamicResource MaterialDesignCardBackground}" />
                                                                                </Trigger>
                                                                            </ControlTemplate.Triggers>
                                                                        </ControlTemplate>
                                                                    </RadioButton.Template>
                                                                </RadioButton>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ContentControl.Style>
                                </ContentControl>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </md:Card>
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Border
                    x:Name="HeaderBorder"
                    Grid.RowSpan="2"
                    Background="{DynamicResource MaterialDesignCardBackground}" />
                <!--  顶部按钮功能 主题/最小化/最大化/退出系统  -->
                <StackPanel
                    Margin="6"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Orientation="Horizontal">
                    <ToggleButton
                        x:Name="toggleNotification"
                        Margin="5"
                        Padding="5"
                        IsChecked="{Binding NotificationPanelIsOpen}"
                        Style="{StaticResource MaterialDesignFlatButton}">
                        <StackPanel Orientation="Horizontal">
                            <Image
                                Width="25 "
                                Height="25"
                                Source="/Assets/Images/notification.png" />

                        </StackPanel>
                    </ToggleButton>

                    <!--<ToggleButton
                        Margin="5"
                        Padding="5"

                        VerticalAlignment="Center"
                        IsChecked="{Binding IsShowFriendsPanel, Mode=TwoWay}"
                        Style="{StaticResource MaterialDesignFlatButton}">
                        <ToggleButton.Content>
                            <Image Source="/Assets/Images/message.png" />
                        </ToggleButton.Content>
                    </ToggleButton>-->

                    <!--<ComboBox Width="100" SelectedIndex="{Binding LangIndex}">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="SelectionChanged">
                                <i:InvokeCommandAction Command="{Binding SelectionChangedCommand}" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                        <ComboBoxItem>
                            <StackPanel Orientation="Horizontal">
                                <Image
                                    Width="20"
                                    Height="20"
                                    VerticalAlignment="Center"
                                    Source="/Assets/Images/zh.png" />
                                <TextBlock
                                    Margin="10,0"
                                    VerticalAlignment="Center"
                                    Text="中文" />
                            </StackPanel>
                        </ComboBoxItem>
                        <ComboBoxItem>
                            <StackPanel Orientation="Horizontal">
                                <Image
                                    Width="20"
                                    Height="20"
                                    VerticalAlignment="Center"
                                    Source="/Assets/Images/us.png" />
                                <TextBlock
                                    Margin="10,0"
                                    VerticalAlignment="Center"
                                    Text="English" />
                            </StackPanel>
                        </ComboBoxItem>
                        <ComboBoxItem>
                            <StackPanel Orientation="Horizontal">
                                <Image
                                    Width="20"
                                    Height="20"
                                    VerticalAlignment="Center"
                                    Source="/Assets/Images/th.png" />
                                <TextBlock
                                    Margin="10,0"
                                    VerticalAlignment="Center"
                                    Text="ภาษาไทย" />
                            </StackPanel>
                        </ComboBoxItem>

                    </ComboBox>
                    <TextBlock Text="{loc:Loc Title}" VerticalAlignment="Center"/>-->
                    <ToggleButton
                        x:Name="toggleShowPanel"
                        Margin="5"
                        Padding="10,5"
                        IsChecked="{Binding IsShowUserPanel, Mode=TwoWay}"
                        Style="{StaticResource MaterialDesignFlatButton}">
                        <StackPanel Orientation="Horizontal">
                            <Image
                                Width="20"
                                Height="20"
                                Source="{Binding appService.Photo, Converter={StaticResource bytesToImageConverter}}" />
                            <TextBlock Margin="5,0" Text="{Binding appService.UserNameAndSurname}" />
                        </StackPanel>
                    </ToggleButton>

                    <Button
                        x:Name="BtnMin"
                        VerticalAlignment="Center"
                        Content="{md:PackIcon Kind=Minimize}"
                        Style="{StaticResource MaterialDesignFlatButton}" />
                    <Button
                        x:Name="BtnMax"
                        Margin="5,0"
                        VerticalAlignment="Center"
                        Content="{md:PackIcon Kind=WindowMaximize}"
                        Style="{StaticResource MaterialDesignFlatButton}" />
                    <Button
                        x:Name="BtnClose"
                        VerticalAlignment="Center"
                        Content="{md:PackIcon Kind=Close}"
                        Style="{StaticResource MaterialDesignFlatButton}" />
                </StackPanel>

                <md:Snackbar
                    x:Name="Snackbar"
                    Panel.ZIndex="1"
                    MessageQueue="{md:MessageQueue}" />
                <!--  选项卡  -->
                <controls:TabControl
                    Grid.Row="1"
                    HorizontalContentAlignment="Left"
                    controls:TabCloseItem.CloseClick="OnCloseButtonClick"
                    md:ElevationAssist.Elevation="Dp1"
                    prism:RegionManager.RegionName="{x:Static const:AppRegions.Main}"
                    SelectedIndex="{Binding NavigationService.SelectedIndex}"
                    Style="{StaticResource DefaultMaterialDesignTabControl}">
                    <TabControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Foreground="{DynamicResource MaterialDesignBody}" Text="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=controls:TabCloseItem}, Converter={StaticResource menuTitleConverter}}" />
                        </DataTemplate>
                    </TabControl.ItemTemplate>
                </controls:TabControl>
            </Grid>
        </Grid>
    </md:DialogHost>
</Window>
