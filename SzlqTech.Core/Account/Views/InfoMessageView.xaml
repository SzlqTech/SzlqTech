<UserControl
    x:Class="SzlqTech.Core.Account.Views.InfoMessageView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:loc="clr-namespace:SzlqTech.Localization;assembly=SzlqTech.Localization"
    xmlns:local="clr-namespace:SzlqTech.Core.Account.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    Width="560"
    Height="300"
    Background="{DynamicResource MaterialDesignCardBackground}"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image
                Width="20"
                Height="20"
                Source="/SzlqTech.Core;component/Assets/Images/Info.png" />
            <TextBlock Margin="10,0" Text="{Binding Content}" VerticalAlignment="Center" FontSize="18"/>

        </WrapPanel>

        <StackPanel
            Grid.Row="1"
            Margin="10"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <Button Command="{Binding SaveCommand}" Content="{loc:Loc Confirm}" />
            <!--<Button
                Margin="10,0"
                Command="{Binding CancelCommand}"
                Content="{loc:Loc Cancel}" />-->
        </StackPanel>
    </Grid>
</UserControl>
