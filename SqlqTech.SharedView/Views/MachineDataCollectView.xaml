<UserControl
    x:Class="SqlqTech.SharedView.Views.MachineDataCollectView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:loc="clr-namespace:SzlqTech.Localization;assembly=SzlqTech.Localization"
    xmlns:local="clr-namespace:SqlqTech.SharedView.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="{DynamicResource MaterialDesignCardBackground}"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
            <Button
                Margin="10"
                Command="{Binding AddCommand}"
                Content="{loc:Loc Add}" />
            <Button
                Margin="10"
                Command="{Binding DeleteCommand}"
                Content="{loc:Loc Delete}" />

            <Button
                Margin="10"
                Command="{Binding SaveCommand}"
                Content="{loc:Loc Save}" />
        </StackPanel>
        <DataGrid
            Grid.Row="1"
            Margin="10,0,10,10"
            AutoGenerateColumns="False"
            CanUserAddRows="False"
            CanUserSortColumns="False"
            IsReadOnly="False"
            ItemsSource="{Binding MachineDetailVos}"
            SelectedItem="{Binding SelectedMachineDetailVo}"
            Style="{StaticResource MaterialDesignDataGrid}">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding HeaderTitle}"
                    Header="标题">
                    <DataGridTextColumn.CellStyle>
                        <Style BasedOn="{StaticResource MaterialDesignDataGridCell}" TargetType="DataGridCell">
                            <Setter Property="VerticalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.CellStyle>
                </DataGridTextColumn>
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding BindingName}"
                    Header="绑定名称">
                    <DataGridTextColumn.CellStyle>
                        <Style BasedOn="{StaticResource MaterialDesignDataGridCell}" TargetType="DataGridCell">
                            <Setter Property="VerticalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.CellStyle>
                </DataGridTextColumn>
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Description}"
                    Header="{loc:Loc Description}">
                    <DataGridTextColumn.CellStyle>
                        <Style BasedOn="{StaticResource MaterialDesignDataGridCell}" TargetType="DataGridCell">
                            <Setter Property="VerticalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.CellStyle>
                </DataGridTextColumn>
                <DataGridCheckBoxColumn
                    Width="*"
                    Binding="{Binding IsSysDate}"
                    Header="是否系统时间">
                    <DataGridCheckBoxColumn.CellStyle>
                        <Style BasedOn="{StaticResource MaterialDesignDataGridCell}" TargetType="DataGridCell">
                            <Setter Property="VerticalAlignment" Value="Center" />
                            <Setter Property="HorizontalAlignment" Value="Left" />
                            <Setter Property="Margin" Value="10,0,0,0" />
                        </Style>
                    </DataGridCheckBoxColumn.CellStyle>
                </DataGridCheckBoxColumn>
                <DataGridCheckBoxColumn
                    Width="0.5*"
                    Binding="{Binding IsEnable}"
                    Header="是否启用">
                    <DataGridCheckBoxColumn.CellStyle>
                        <Style BasedOn="{StaticResource MaterialDesignDataGridCell}" TargetType="DataGridCell">
                            <Setter Property="VerticalAlignment" Value="Center" />
                            <Setter Property="HorizontalAlignment" Value="Left" />
                            <Setter Property="Margin" Value="10,0,0,0" />
                        </Style>
                    </DataGridCheckBoxColumn.CellStyle>

                </DataGridCheckBoxColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
