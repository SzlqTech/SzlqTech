<UserControl
    x:Class="SqlqTech.SharedView.Views.MachineSettingView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:core="clr-namespace:System;assembly=mscorlib"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:loc="clr-namespace:SzlqTech.Localization;assembly=SzlqTech.Localization"
    xmlns:local="clr-namespace:SqlqTech.SharedView.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    d:DesignHeight="800"
    d:DesignWidth="1280"
    Background="{DynamicResource MaterialDesignCardBackground}"
    Loaded="UserControl_Loaded"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <DockPanel LastChildFill="False">
            <StackPanel
                Margin="10"
                DockPanel.Dock="Right"
                Orientation="Horizontal">
                <Button
                    md:ButtonAssist.CornerRadius="5"
                    Command="{Binding AddCommand}">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{loc:Loc Add}"/>
                            <TextBlock Text=" PLC"/>
                        </StackPanel>
                    </Button.Content>
                </Button>
                    
                <Button
                    Margin="5,0,5,0"
                    md:ButtonAssist.CornerRadius="5"
                    Command="{Binding SaveCommand}"
                    Content="{loc:Loc Save}" />
            </StackPanel>
        </DockPanel>

        <DataGrid
            Grid.Row="1"
            Margin="10,0,10,10"
            VerticalContentAlignment="Center"
            AutoGenerateColumns="False"
            CanUserAddRows="False"
            CanUserSortColumns="False"
            IsReadOnly="False"
            ItemsSource="{Binding MachineSettingVos}"
            Style="{StaticResource MaterialDesignDataGrid}">

            <DataGrid.Columns>
                <DataGridComboBoxColumn
                    x:Name="cboxPLC"
                    Width="*"
                    Header="{loc:Loc Type}"
                    SelectedItemBinding="{Binding SelectedMachineType}">
                    <DataGridComboBoxColumn.ElementStyle>
                        <Style BasedOn="{StaticResource MaterialDesignComboBox}" TargetType="ComboBox">
                            <Setter Property="VerticalAlignment" Value="Center" />
                        </Style>
                    </DataGridComboBoxColumn.ElementStyle>
                    <DataGridComboBoxColumn.EditingElementStyle>
                        <Style BasedOn="{StaticResource MaterialDesignComboBox}" TargetType="ComboBox">
                            <Setter Property="VerticalAlignment" Value="Center" />
                        </Style>
                    </DataGridComboBoxColumn.EditingElementStyle>
                </DataGridComboBoxColumn>
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding PortKey}"
                    Header="{loc:Loc Address}">
                    <DataGridTextColumn.CellStyle>
                        <Style BasedOn="{StaticResource MaterialDesignDataGridCell}" TargetType="DataGridCell">
                            <Setter Property="VerticalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.CellStyle>

                </DataGridTextColumn>
                <DataGridCheckBoxColumn Header="{loc:Loc Enable}" Width="0.5*" Binding="{Binding IsEnable}" >
                    <DataGridCheckBoxColumn.CellStyle>
                        <Style TargetType="DataGridCell" BasedOn="{StaticResource MaterialDesignDataGridCell}">
                            <Setter Property="HorizontalAlignment" Value="Left"/>
                            <Setter Property="Margin" Value="10 0"/>
                        </Style>
                    </DataGridCheckBoxColumn.CellStyle>
                </DataGridCheckBoxColumn>
                <DataGridTextColumn
                    Width="*"
                    md:TextFieldAssist.TextBoxIsMultiLine="True"
                    Binding="{Binding Description}"
                    Header="{loc:Loc Description}">
                    <DataGridTextColumn.CellStyle>
                        <Style BasedOn="{StaticResource MaterialDesignDataGridCell}" TargetType="DataGridCell">
                            <Setter Property="VerticalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.CellStyle>
                </DataGridTextColumn>
                <DataGridTemplateColumn Width="*" Header="{loc:Loc Operation}">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button
                                    Margin="0,0,5,0"
                                    Command="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=DataGrid}, Path=DataContext.DetailCommand}"
                                    CommandParameter="{Binding}"
                                    Content="{loc:Loc Detail}" />
                                <Button
                                    Margin="0,0,5,0"
                                    Command="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=DataGrid}, Path=DataContext.DeleteCommand}"
                                    CommandParameter="{Binding}"
                                    Content="{loc:Loc Delete}" />
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
