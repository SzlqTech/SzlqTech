<UserControl
    x:Class="SqlqTech.SharedView.Views.MachineSettingView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:core="clr-namespace:System;assembly=mscorlib"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SqlqTech.SharedView.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    d:DesignHeight="800"
    d:DesignWidth="1280"
    Background="{DynamicResource MaterialDesignCardBackground}"
    Loaded="UserControl_Loaded"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <md:BundledTheme
                    BaseTheme="Light"
                    PrimaryColor="DeepPurple"
                    SecondaryColor="Lime" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign3.Defaults.xaml" />
                <ResourceDictionary Source="pack://application:,,,/SzlqTech;component/Themes/Generic.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <Style BasedOn="{StaticResource MaterialDesignDataGridCell}" TargetType="{x:Type DataGridCell}">
                <Setter Property="HorizontalContentAlignment" Value="Center" />
                <Setter Property="VerticalContentAlignment" Value="Center" />
            </Style>


        </ResourceDictionary>

        <!--  Create list of enumeration values  -->


    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <DockPanel LastChildFill="False">
            <StackPanel
                Margin="10"
                DockPanel.Dock="Right"
                Orientation="Horizontal">
                <Button
                    md:ButtonAssist.CornerRadius="5"
                    Command="{Binding AddCommand}"
                    Content="添加PLC" />
                <Button
                    Margin="5,0,5,0"
                    md:ButtonAssist.CornerRadius="5"
                    Command="{Binding SaveCommand}"
                    Content="保存设置" />
            </StackPanel>
        </DockPanel>

        <DataGrid
            Grid.Row="1"
            Margin="10,0,10,10"
            VerticalContentAlignment="Center"
            AutoGenerateColumns="False"
            CanUserAddRows="False"
            CanUserSortColumns="False"
            IsReadOnly="False"
            ItemsSource="{Binding MachineSettingVos}"
            Style="{StaticResource MaterialDesignDataGrid}">

            <DataGrid.Columns>
                <DataGridComboBoxColumn
                    x:Name="cboxPLC"
                    Width="*"
                    Header="PLC类型"
                    SelectedItemBinding="{Binding SelectedMachineType}" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding PortName}"
                    Header="PLC地址" />
                <DataGridTextColumn
                    Width="*"
                    md:TextFieldAssist.TextBoxIsMultiLine="True"
                    Binding="{Binding Description}"
                    Header="PLC说明" />
                <DataGridTemplateColumn Width="*" Header="操作">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button Margin="0,0,5,0" Content="PLC详情" />
                                <Button Margin="0,0,5,0" Content="删除" />
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
