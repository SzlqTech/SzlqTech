<UserControl
    x:Class="SqlqTech.SharedView.Views.ScannerSettingView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:loc="clr-namespace:SzlqTech.Localization;assembly=SzlqTech.Localization"
    xmlns:local="clr-namespace:SqlqTech.SharedView.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="{DynamicResource MaterialDesignCardBackground}"
    Loaded="UserControl_Loaded"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <DockPanel LastChildFill="False">
            <StackPanel
                Margin="10"
                DockPanel.Dock="Right"
                Orientation="Horizontal">
                <Button md:ButtonAssist.CornerRadius="5" Command="{Binding AddCommand}" >
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{loc:Loc Add}"/>
                            <TextBlock Text=" "/>
                            <TextBlock Text="{loc:Loc ScanEquipment}"/>
                        </StackPanel>
                    </Button.Content>
                </Button>

                <Button
                    Margin="5,0,5,0"
                    md:ButtonAssist.CornerRadius="5"
                    Command="{Binding SaveCommand}"
                    Content="{loc:Loc Save}" />
                <Button
                    Margin="5,0,5,0"
                    md:ButtonAssist.CornerRadius="5"
                    Command="{Binding DeleteCommand}"
                    Content="{loc:Loc Delete}" />
            </StackPanel>
        </DockPanel>
        <DataGrid
            Grid.Row="1"
            Margin="10,0,10,10"
            AutoGenerateColumns="False"
            CanUserAddRows="False"
            CanUserSortColumns="False"
            IsReadOnly="False"
            ItemsSource="{Binding ScannerSettingVos}"
            SelectedItem="{Binding SelectedScannerSettingVo}"
            Style="{StaticResource MaterialDesignDataGrid}">
            <DataGrid.Columns>
                <DataGridComboBoxColumn
                    x:Name="cboxScanner"
                    Width="*"
                    Header="{loc:Loc Type}"
                    SelectedValueBinding="{Binding ScannerTypeName}" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding PortKey}"
                    Header="{loc:Loc Address}" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding PortName}"
                    Header="{loc:Loc Name}" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Description}"
                    Header="{loc:Loc Description}" />
                <DataGridCheckBoxColumn
                    Width="*"
                    Binding="{Binding IsEnable}"
                    Header="{loc:Loc Enable}">
                    <DataGridCheckBoxColumn.CellStyle>
                        <Style BasedOn="{StaticResource MaterialDesignDataGridCell}" TargetType="DataGridCell">
                            <Setter Property="VerticalAlignment" Value="Center" />
                            <Setter Property="HorizontalAlignment" Value="Left" />
                            <Setter Property="Margin" Value="10,0,0,0" />
                        </Style>
                    </DataGridCheckBoxColumn.CellStyle>

                </DataGridCheckBoxColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
