<UserControl
    x:Class="SqlqTech.SharedView.Views.SysConfigView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:loc="clr-namespace:SzlqTech.Localization;assembly=SzlqTech.Localization"
    xmlns:local="clr-namespace:SqlqTech.SharedView.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="{DynamicResource MaterialDesignCardBackground}"
    mc:Ignorable="d">
    <Grid>
        <StackPanel
            Margin="30,30,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <TextBlock
                    Margin="0,0,10,0"
                    VerticalAlignment="Center"
                    Text="{loc:Loc LangSelected}" />
                <TextBlock VerticalAlignment="Center" Text=":" />
                <ComboBox Width="100" SelectedIndex="{Binding LangIndex}">
                    <ComboBoxItem>
                        <StackPanel Orientation="Horizontal">
                            <Image
                                Width="20"
                                Height="20"
                                VerticalAlignment="Center"
                                Source="/SzlqTech.Core;component/Assets/Images/zh.png" />
                            <TextBlock
                                Margin="10,0"
                                VerticalAlignment="Center"
                                Text="中文" />
                        </StackPanel>
                    </ComboBoxItem>
                    <ComboBoxItem>
                        <StackPanel Orientation="Horizontal">
                            <Image
                                Width="20"
                                Height="20"
                                VerticalAlignment="Center"
                                Source="/SzlqTech.Core;component/Assets/Images/us.png" />

                            <TextBlock
                                Margin="10,0"
                                VerticalAlignment="Center"
                                Text="English" />
                        </StackPanel>
                    </ComboBoxItem>
                    <ComboBoxItem>
                        <StackPanel Orientation="Horizontal">
                            <Image
                                Width="20"
                                Height="20"
                                VerticalAlignment="Center"
                                Source="/SzlqTech.Core;component/Assets/Images/th.png" />
                            <TextBlock
                                Margin="10,0"
                                VerticalAlignment="Center"
                                Text="ภาษาไทย" />
                        </StackPanel>
                    </ComboBoxItem>

                </ComboBox>
            </StackPanel>

            <Button
                Margin="0,10,0,0"
                Command="{Binding SaveCommand}"
                Content="{loc:Loc Save}" />
        </StackPanel>
    </Grid>
</UserControl>
