<UserControl
    x:Class="SzlqTech.Permission.Views.MenuAssignView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:SzlqTech.Permission.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:vo="clr-namespace:SzlqTech.Core.Vos;assembly=SzlqTech.Core"
    MinWidth="900"
    xmlns:loc="clr-namespace:SzlqTech.Localization;assembly=SzlqTech.Localization"
    MinHeight="1200"
    Background="{DynamicResource MaterialDesignCardBackground}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <DockPanel Margin="10" LastChildFill="True">
            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">

                <Button
                    MinWidth="130"
                    MinHeight="40"
                    Margin="10,0,10,0"
                    Command="{Binding SaveCommand}">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <md:PackIcon
                                Margin="0,0,10,0"
                                VerticalAlignment="Center"
                                Kind="ContentSave" />
                            <TextBlock Text="{loc:Loc Save}" />
                        </StackPanel>
                    </Button.Content>
                </Button>

                <Button
                    MinWidth="130"
                    MinHeight="40"
                    Margin="10,0,10,0"
                    Command="{Binding DeleteCommand}">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <md:PackIcon
                                Margin="0,0,10,0"
                                VerticalAlignment="Center"
                                Kind="ClearBox" />
                            <TextBlock Text="{loc:Loc Delete}" />
                        </StackPanel>
                    </Button.Content>
                </Button>
            </StackPanel>
            <Grid DockPanel.Dock="Top" />
        </DockPanel>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="93*" />
                <ColumnDefinition Width="47*" />
            </Grid.ColumnDefinitions>
            <Grid>
                <TreeView
                    MinWidth="220"
                    Margin="10"
                    ItemsSource="{Binding MenuNodes}">
                    <TreeView.Resources>
                        <HierarchicalDataTemplate DataType="{x:Type vo:MenuNodesVo}" ItemsSource="{Binding MenuNodeItems, Mode=OneTime}">
                            <StackPanel Orientation="Horizontal">
                                <CheckBox
                                    Command="{Binding DataContext.IsSelectedAllCommand, RelativeSource={RelativeSource AncestorType=TreeView, Mode=FindAncestor}}"
                                    CommandParameter="{Binding}"
                                    IsChecked="{Binding IsSelectedAll}" />
                                <TextBlock
                                    x:Name="title"
                                    Margin="3,2"
                                    FontSize="18"
                                    Text="{Binding Title}" />
                            </StackPanel>

                        </HierarchicalDataTemplate>
                        <DataTemplate DataType="{x:Type vo:MenuNodeItem}">
                            <StackPanel Orientation="Horizontal">
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="PreviewMouseLeftButtonDown">
                                        <i:InvokeCommandAction Command="{Binding DataContext.NavigationCommand, RelativeSource={RelativeSource AncestorType=TreeView, Mode=FindAncestor}}" CommandParameter="{Binding}" />
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                                <CheckBox
                                    Command="{Binding DataContext.IsSelectedCommand, RelativeSource={RelativeSource AncestorType=TreeView, Mode=FindAncestor}}"
                                    CommandParameter="{Binding}"
                                    IsChecked="{Binding IsSelected}" />
                                <!--<md:PackIcon
                                    Margin="5,0,5,0"
                                    VerticalAlignment="Center"
                                    Kind="{Binding Icon}" />-->
                                <TextBlock
                                    Margin="3,2"
                                    Style="{StaticResource NavigateTextBlock}"
                                    Text="{Binding Text}"
                                    ToolTip="{Binding Text}" />
                            </StackPanel>
                        </DataTemplate>
                    </TreeView.Resources>
                </TreeView>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
